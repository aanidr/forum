#menu_bar
	%ul
		%li= link_to 'Home', root_path
		%li= link_to 'Topics', topics_path
		- if logged_in?
			%li= link_to 'My account', user_path(current_user)
			%li= link_to 'Log out', sessions_destroy_path, method: :delete
		- else
			%li= link_to 'Create account', new_user_path
			%li= link_to 'Log in', sessions_new_path
		
